<p id="notice"><%= notice %></p>

<h1>Episodes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dept</th>
      <th>Activities</th>
      <th>Destination</th>
      <th>Record 1st</th>
      <th>Record 2nd</th>
      <th>Record 3rd</th>
      <th>Record 4th</th>
      <th>Advise</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.name %></td>
        <td><%= episode.dept %></td>
        <td><%= episode.activities %></td>
        <td><%= episode.destination %></td>
        <td><%= episode.record_1st %></td>
        <td><%= episode.record_2nd %></td>
        <td><%= episode.record_3rd %></td>
        <td><%= episode.record_4th %></td>
        <td><%= episode.advise %></td>
        <td><%= episode.comment %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Episode', new_episode_path %>
